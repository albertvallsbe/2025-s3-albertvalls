{
    "name": "itacademy-sprint4",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "type": "module",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watchAll --verbose=false",
        "ts": "tsc",
        "ts-w": "tsc --watch"
    },
    "devDependencies": {
        "jest": "^29.2.2",
        "jest-html-reporter": "^3.7.0",
        "jest-junit": "^14.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3"
    },
    "jest": {
        "reporters": [
            "default",
            [
                "./node_modules/jest-html-reporter",
                {
                    "pageTitle": "Test Solution",
                    "outputPath": "test-results.html",
                    "includeFailureMsg": true,
                    "includeConsoleLog": true
                }
            ]
        ]
    },
    "jest-junit": {
        "suiteNameTemplate": "{filepath}",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none"
    },
    "dependencies": {
        "browserify": "^17.0.0"
    }
}
